<%-include('../layouts/header')%>
<%- include('../partials/user-header')%>
<section style="background-color: rgb(255, 253, 244);">
<div class="banner banner-1 container-fluid">
   <img class="img-fluid" src="/images/FT_Smart_100723.webp" style="height: 60vh; width: 100vw;">
</div>
<div class=" text-center" style="background-color: rgb(255, 233, 252);">
    <div class="text center">
        <h5 class="icons categories">SHOP FOR</h5>
    </div>
    <div class="container">
        <div class="row">
            <% categories.forEach(function(category) { %>
            <div class="col-2 icons">
                <img class="img-fluid equal-width" src="/uploads/<%=category.image %>" alt="Image 1">
                <%=category.Name%>
            </div>
            <% }); %>
        </div>
    </div>
</div>
<div class="products container">
    <div class="product-title d-flex justify-content-between align-items-center">
        <div>
            
        </div>
        <h2 class="ps-5">New Arrivals</h2>
        <div class="filter-dropdown">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-sliders"></i>
                    FILTERS
                </button>
                <ul class="dropdown-menu" aria-labelledby="filterDropdown">
                    <li><a class="dropdown-item" href="">Categories</a></li>
                    <li><a class="dropdown-item" href="#">Brands</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <% products.forEach(function(product) { %>
                <div class="col-md-3 col-sm-6 mb-4 equal-width">
                    <div class="card" >
                        <img src="/uploads/<%= product.images[0] %>" class="card-img-top " style=" height: 40vh;" alt="">
                        <div class="card-body d-flex flex-column justify-content-between" style=" height: 30vh;">
                            <h5 class="card-title text-center"><%= product.ProductName %></h5>
                            <div class="d-flex flex-column justify-content-center">
                                <p class="card-text text-center">Price â‚¹<%= product.Price %></p>
                                <a  href="/product/<%= product._id %>" class="btn btn-primary text-center">View Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    
    
</div>
</section>

<%- include('../partials/user-footer')%>
<%- include('../layouts/footer') %>