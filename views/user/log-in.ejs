<%- include('../layouts/header')%>
<header>
    <nav class="navbar  p-0">
      <div class="container-fluid d-flex justify-content-center align-items-middle " style="background: linear-gradient(to right, rgb(255, 184, 184), rgb(229, 255, 251));"> <!-- Align the image to the left -->
              <a class="navbar-brand ">
                  <img src="/images/screenshot--272-removebgpreview-1@2x.png" style="max-height: 70px;" alt="">
              </a>
      </div>
    </nav>
    </header>
<section class="vh-100 pt-5" style="background: linear-gradient(to right, rgb(255, 184, 184), rgb(229, 255, 251));">
    <div class="container-fluid ">
        <div class="icon text-center">
            <h1>LOG IN</h1>
        </div>
        <div class="row justify-content-center align-items-center ">
            <div class="col-md-3  position-relative  pe-3">
                <form id="loginForm" action="/login" method="post">
                    <% if (messages.error) { %>
                        <div class="alert alert-danger">
                            <%= messages.error %>
                        </div>
                    <% } %>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" name="Email" class="form-control" id="email" placeholder="Enter your email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="Password" class="form-control" id="loginPassword" placeholder="Enter your password" required>
                    </div>
                    <div class="mb-3">
                        <a href="/forgotpassword" class="text-decoration-none ">Forgot password?</a>
                    </div>
                    <button type="submit" id="userLogged" class="btn btn-primary" style="width: -webkit-fill-available;">Login</button>
                </form>
            </div>
        </div>
        <div class="text-center mt-3">
            <a href="/signup" class="text-decoration-none">Create Account</a>
        </div>
        
    </div>

</section>
<%- include('../layouts/footer') %>

